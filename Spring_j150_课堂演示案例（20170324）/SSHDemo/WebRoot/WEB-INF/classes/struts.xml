<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!-- 配置常量 -->
    <constant name="struts.i18n.encoding" value="UTF-8"></constant>
    <constant name="struts.devMode" value="true"></constant>
    
	<package name="employee" namespace="/employee" extends="struts-default">	   
	  <action name="loginAction" class="employeeAction" method="login">
	    <result name="success" type="dispatcher">/jsp/index.jsp</result>
	    <result name="login" type="dispatcher">/login.jsp</result>
	  </action> 
	  <action name="listAction" class="employeeAction" method="list">
	    <result name="success" type="dispatcher">/jsp/admin/empList.jsp</result>
	  </action> 
	</package>
	
</struts>
